<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CafeListActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="12dp">


        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:background="@drawable/outline"
            android:clickable="true"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="이지요더파크"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tag_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:text="#휠체어이동가능"
                android:textSize="11dp"
                android:background="@drawable/layout_background"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tag_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginRight="7dp"
                android:text="#테이블서비스"
                android:textSize="11dp"
                android:background="@drawable/layout_background"

                android:textColor="@color/white"
                android:layout_toRightOf="@+id/tag_txt1"/>

            <TextView
                android:id="@+id/tag_txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginRight="7dp"
                android:text="#아기의자"
                android:textSize="11dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/layout_background"
                android:backgroundTint="#00B050"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tag_txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginRight="7dp"
                android:text="#기저귀교환대"
                android:textSize="11dp"
                android:background="@drawable/layout_background"
                android:backgroundTint="#00B050"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/tag_txt4" />

            <TextView
                android:id="@+id/tag_txt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:layout_marginRight="7dp"
                android:text="#수유실"
                android:textSize="11dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/layout_background"
                android:backgroundTint="#00B050"
                android:textColor="@color/white" />


            <LinearLayout
                android:id="@+id/rl_inside1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/people_image1"
                    android:layout_width="86dp"
                    android:layout_height="85dp"
                    android:layout_gravity="right|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/easy" />

                <TextView
                    android:id="@+id/card_id_txt1"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="4dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="12dp">


        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:background="@drawable/outline"
            android:clickable="true"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="프론트오브"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tag_txt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:text="#휠체어이동가능"
                android:textSize="11dp"
                android:background="@drawable/layout_background"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tag_txt13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginRight="7dp"
                android:text="#점자메뉴판"
                android:textSize="11dp"
                android:background="@drawable/layout_background"
                android:backgroundTint="#0070C0"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/tag_txt11" />


            <LinearLayout
                android:id="@+id/rl_inside2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/people_image2"
                    android:layout_width="86dp"
                    android:layout_height="85dp"
                    android:layout_gravity="right|center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/front" />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="4dp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>