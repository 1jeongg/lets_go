<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CafeDetailActivity3">

    <LinearLayout
        android:id="@+id/register_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="프론트오브"
            android:textColor="@color/black"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/register_sub">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/real_location2"
                android:layout_width="match_parent"
                android:layout_height="177dp" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/info"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/white"
                android:layout_marginVertical="20dp"
                android:shadowColor="#ff0000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:elevation="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="카테고리"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#카페 #디저트"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="위치"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="부산광역시 해운대구 송정구덕포길 70"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="태그"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="clip_horizontal"
                                    android:padding="2dp"
                                    android:layout_marginRight="4dp"
                                    android:text="점자메뉴판"
                                    android:textColor="@color/white"
                                    android:background="@drawable/layout_background"
                                    android:backgroundTint="#8FAADC"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_gravity="clip_horizontal"
                                    android:padding="2dp"
                                    android:layout_marginRight="4dp"
                                    android:text="휠체어이동가능"
                                    android:textColor="@color/white"
                                    android:background="@drawable/layout_background"
                                    android:backgroundTint="#8FAADC"/>


                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="메뉴"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="90dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/real_menu2" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="방문자 후기"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/review_txt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginLeft="30dp" />
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:shadowColor="#ff0000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:elevation="7dp">

                <Button
                    android:id="@+id/btn_detail3"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:backgroundTint="#ff0000"
                    android:text="등록하기"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/cafe_review3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>