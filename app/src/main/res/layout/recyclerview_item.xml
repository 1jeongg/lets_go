<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="12dp">


        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:background="@drawable/outline"
            android:clickable="true"
            android:padding="15dp">

            <TextView
                android:id="@+id/restaurant_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식당이름"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/restaurant_tag_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/restaurant_tag_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="80dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/restaurant_tag_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="160dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/restaurant_tag_txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/restaurant_tag_txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="80dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/restaurant_tag_txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="160dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/restaurant_tag_txt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/restaurant_tag_txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="90dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/restaurant_tag_txt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="160dp"
                android:text="#휠체어이동가능"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_inside"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_margin="15dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/people_image"
                android:layout_width="86dp"
                android:layout_height="85dp"
                android:layout_gravity="right|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/photo" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>